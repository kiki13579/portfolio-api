{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Administration{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/admin">Portfolio Admin</a>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/admin/logout">Se d√©connecter</a>
                </li>
            </ul>
        </div>
    </nav>

    <main class="container my-5">
        {% if app.session.flash('flash_message') %}
            <div class="alert alert-success">
                {{ app.session.flash('flash_message')[0] }}
            </div>
        {% endif %}
        
        {% block body %}{% endblock %}
    </main>

</body>
</html>