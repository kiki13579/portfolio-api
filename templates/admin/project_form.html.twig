{# templates/admin/project_form.html.twig #}
{% extends "base.html.twig" %}

{% block title %}{{ form_title }}{% endblock %}

{% block body %}
    <h1>{{ form_title }}</h1>

    <form method="POST">
        <div class="mb-3">
            <label for="title" class="form-label">Titre</label>
            <input type="text" name="title" id="title" class="form-control {{ errors.title ? 'is-invalid' : '' }}" value="{{ old.title ?? '' }}">
            {% if errors.title %}
                <div class="invalid-feedback">{{ errors.title }}</div>
            {% endif %}
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" id="description" class="form-control {{ errors.description ? 'is-invalid' : '' }}" rows="5">{{ old.description ?? '' }}</textarea>
            {% if errors.description %}
                <div class="invalid-feedback">{{ errors.description }}</div>
            {% endif %}
        </div>

        <div class="mb-3">
            <label for="projectUrl" class="form-label">URL du projet</label>
            <input type="url" name="projectUrl" id="projectUrl" class="form-control {{ errors.projectUrl ? 'is-invalid' : '' }}" value="{{ old.projectUrl ?? '' }}">
             {% if errors.projectUrl %}
                <div class="invalid-feedback">{{ errors.projectUrl }}</div>
            {% endif %}
        </div>

        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <a href="/admin" class="btn btn-secondary">Annuler</a>
    </form>
{% endblock %}