{% extends "base.html.twig" %}
{% block title %}Gestion des Compétences{% endblock %}
{% block ul %}
<ul class="navbar-nav me-auto">
    <li class="nav-item"><a class="nav-link" href="/admin/projects">Projets</a></li>
    <li class="nav-item"><a class="nav-link" href="/admin/skills">Compétences</a></li>
    <li class="nav-item"><a class="nav-link" href="/admin/api-keys">Clés d'API</a></li>
</ul>
<ul class="navbar-nav ms-auto">
    <li class="nav-item"><a class="nav-link" href="/admin/logout">Se déconnecter</a></li>
</ul>
{% endblock %}
{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Gestion des Compétences</h1>
        <a href="/admin/skills/new" class="btn btn-primary">Ajouter une compétence</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr><th>ID</th><th>Nom</th><th>Catégorie</th><th>Actions</th></tr>
        </thead>
        <tbody>
            {% for skill in skills %}
                <tr>
                    <td>{{ skill.id }}</td>
                    <td>{{ skill.name }}</td>
                    <td>{{ skill.category }}</td>
                    <td>...</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}